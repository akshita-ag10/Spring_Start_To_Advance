package com.akshita;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;

import com.akshita.service.BikeService;

@SpringBootApplication
public class Application {

	public static void main(String[] args) {
		ConfigurableApplicationContext container = SpringApplication.run(Application.class, args);
		BikeService bserve = container.getBean(BikeService.class);
		
		bserve.fetchByBrand("Royal Enfield").forEach(b-> System.out.println(b));
		System.out.println("_____________________________________________________");
		
		bserve.fetchByModel("CB350").forEach(b->System.out.println(b));
		System.out.println("______________________________________________________");
		
		bserve.fetchByBrand("Jawa", "Honda").forEach(b->System.out.println(b));
		System.out.println("______________________________________________________");

		bserve.fetchByPrice(150000.0, 205000.0).forEach(b->System.out.println(b));
		System.out.println("______________________________________________________");

		bserve.toUpdatePriceByEngine(230000, "348cc");
	
		
	}

}
