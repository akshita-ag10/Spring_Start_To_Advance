<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <!-- if we don't specify id, it will be by default camelCase of class name - javaCourse -->
    <bean id="java" class="com.akshita.service.JavaCourse"></bean>
    <bean id="spring" class="com.akshita.service.SpringbootCourse"></bean>
    <bean id="devops" class="com.akshita.service.DevOpsCourse"></bean>
    
    <bean id="coach" class="com.akshita.service.Coaching">
    	<property ref="devops" name="course"></property>
    	<constructor-arg ref="spring" name ="course"></constructor-arg>
    </bean>
    

</beans>